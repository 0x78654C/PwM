<Window x:Class="PwM.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Name="Pwm"
        xmlns:adorners="http://gu.se/Adorners"
        Title="PwM" Icon="pack://application:,,,/Resources/Logo.ico"  Height="704.594" Width="1074.808" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Visibility="Visible" MouseDown="Window_MouseDown" AllowsTransparency="True"  Background="Transparent" WindowStyle="None">

    <Window.Resources>
        <Style x:Key="MyWaterMarkStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">

                        <Grid>
                            <Border Background="White" BorderBrush="#FF7D8683" BorderThickness="1" CornerRadius="10"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0,0,0" VerticalAlignment="Center" />
                            <Label Margin="5,0,0,0" x:Name="WaterMarkLabel" Content="{TemplateBinding Tag}" HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="Collapsed" Foreground="Gray" FontFamily="Arial"/>

                        </Grid>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Visibility" TargetName="WaterMarkLabel" Value="Visible"/>
                            </MultiTrigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="DimGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderThickness="1,1,1,1" Background="White" BorderBrush="#690fc2">

        <Grid RenderTransformOrigin="0.819,0.497" Margin="0,0,0,0" Background="#f3f5f2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>
            <TabControl Name="tabControl" HorizontalAlignment="Left" Height="693" Margin="220,10,0,0" VerticalAlignment="Top" Width="853">
                <TabItem Name="homeTab" Header="homeTab">
                    <Grid Background="#f3f5f2">
                        <Label Content="_____________________________________________________________________________" Foreground="Red" HorizontalAlignment="Center" Margin="10,72,632,0" VerticalAlignment="Top" Height="26" Width="205"/>
                        <Label Content="User Connected" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Foreground="#0d0300" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="user" Name="userTXB" TextAlignment="Left" HorizontalAlignment="Center" Foreground="Green" FontSize="15" Margin="16,91,635,547" Width="196"></TextBlock>
                        <Label Content="Vaults Created" HorizontalAlignment="Left" Margin="10,161,0,0" VerticalAlignment="Top" Foreground="#0d0300" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="0" x:Name="vaultsCountLBL" TextAlignment="Left" HorizontalAlignment="Center" Foreground="Green" FontSize="15" Margin="16,188,781,450" Width="50"/>
                        <Label Content="_____________________________________________________________________________" Foreground="Red" HorizontalAlignment="Center" Margin="10,168,632,0" VerticalAlignment="Top" Height="26" Width="205"/>
                    </Grid>
                </TabItem>
                <TabItem Name="vaultTab" Header="vaultTab">
                    <Grid Background="#f3f5f2">
                        <ListView Name="vaultList" HorizontalAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Auto" Height="490" Margin="21,81,22,0" VerticalAlignment="Top" Width="804" Background="#f3f5f2" Foreground="#0d0300" FontSize="14" PreviewMouseDoubleClick="vaultList_PreviewMouseDoubleClick" KeyDown="vaultList_KeyDown" >
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Vault Name" Width="400" DisplayMemberBinding="{Binding Name}"/>
                                    <GridViewColumn Header="Creation Date" Width="400" DisplayMemberBinding="{Binding CreateDate}"/>
                                </GridView>
                            </ListView.View>
                            <ListView.ContextMenu>
                                <ContextMenu HasDropShadow="False" StaysOpen="True" >
                                    <MenuItem Header="Delete Account" Click="DeleteVault_Click" Foreground="Red" Tag="2" />
                                </ContextMenu>
                            </ListView.ContextMenu>
                        </ListView>
                        <Label Content="_______________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________" HorizontalAlignment="Center" Margin="10,55,10,0" VerticalAlignment="Top" Height="26" Width="827" Foreground="Red" />
                        <Label Content="Vaults List" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Foreground="#0d0300" FontSize="14" FontWeight="Bold"/>
                        <materialDesign:PackIcon Name="AddVaultIcon" ToolTip="Add Vault" Foreground="#690fc2" Kind="Plus" Margin="18,576,0,63" Width="25" Height="26" VerticalAlignment="Center" RenderTransformOrigin="0.556,-0.722" PreviewMouseDown="AddVaultIcon_PreviewMouseDown" FontWeight="Bold"/>
                        <materialDesign:PackIcon x:Name="DelVaultIcon" ToolTip="Delete Vault" Foreground="#690fc2" Kind="Minus" Margin="56,576,0,63" Width="25" Height="26" VerticalAlignment="Center" RenderTransformOrigin="0.556,-0.722" PreviewMouseDown="DelVaultIcon_PreviewMouseDown"/>
                    </Grid>
                </TabItem>
                <TabItem Name="appTab" Header="appTab">
                    <Grid Background="#f3f5f2">
                        <ListView Name="appList" GridViewColumnHeader.Click="AppListColumnHeaderClickedHandler" HorizontalAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Auto" Height="522" Margin="21,56,21,0" VerticalAlignment="Top" Width="805" Background="#f3f5f2" Foreground="#0d0300" FontSize="14">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Application" Width="264" DisplayMemberBinding="{Binding Application}"/>
                                    <GridViewColumn Header="Account" Width="264" DisplayMemberBinding="{Binding Account}"/>
                                    <GridViewColumn Header="Password" Width="266" DisplayMemberBinding="{Binding Password}"/>
                                </GridView>
                            </ListView.View>
                            <ListView.ContextMenu>
                                <ContextMenu HasDropShadow="False" StaysOpen="True" >
                                    <MenuItem Header="Copy to clipboard(15 seconds avaible)" Click="CopyToClipboard_Click" Tag="1" />
                                    <MenuItem Header="Show Password" Click="ShowPassword_Click" Tag="2" />
                                    <MenuItem Header="Update Account Password" Click="UpdateAccountPass_Click" Tag="2" />
                                    <MenuItem Header="Delete Account" Click="DeleteAccount_Click" Foreground="Red" Tag="2" />
                                </ContextMenu>
                            </ListView.ContextMenu>
                        </ListView>
                        <Label Content="_______________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________________" HorizontalAlignment="Center" Margin="12,30,10,0" VerticalAlignment="Top" Height="26" Width="825" Foreground="Red" />
                        <Label Content="Applications list for: " HorizontalAlignment="Left" Margin="13,24,0,0" VerticalAlignment="Top" Foreground="#0d0300" FontSize="14" FontWeight="Bold"/>
                        <TextBlock Name="appListVaultLVL"  Text="vault" HorizontalAlignment="Left" Margin="160,29,0,0" VerticalAlignment="Top" Foreground="Green" FontSize="14" FontWeight="Bold"/>
                        <materialDesign:PackIcon Name="AddAppIcon" ToolTip="Add Application" Foreground="#690fc2" Kind="Plus" Margin="17,585,0,54" Width="25" Height="26" VerticalAlignment="Center" RenderTransformOrigin="0.556,-0.722" PreviewMouseDown="AddAppIcon_PreviewMouseDown" FontWeight="Bold"/>
                        <materialDesign:PackIcon x:Name="DelApp" ToolTip="Delete Application" Foreground="#690fc2" Kind="Minus" Margin="54,585,0,54" Width="25" Height="26" VerticalAlignment="Center" RenderTransformOrigin="0.556,-0.722" PreviewMouseDown="DelAppIcon_PreviewMouseDown"/>
                        <materialDesign:PackIcon Kind="Logout" Name="logoutIconV" Margin="361,627,0,0" Width="26" Height="30" Foreground="Red" RenderTransformOrigin="1.547,0.52"/>
                        <Button Name="vaultCloseLBL" BorderThickness="0" Content="Exit Vault" Background="#f3f5f2" HorizontalAlignment="Left" Margin="384,629,0,0" VerticalAlignment="Top" Foreground="Red" FontSize="14" RenderTransformOrigin="4.157,15.948" FontWeight="Bold" Click="vaultCloseLBL_Click" Width="81" Height="25"/>
                    </Grid>
                </TabItem>
            </TabControl>
            <Grid VerticalAlignment="Top" Height="50" Background="#f3f5f2" >
                <TextBlock Text="PwM - Password Manager"  TextAlignment="Center" HorizontalAlignment="Center" Foreground="Black" FontSize="18" Margin="450,13,220,7" Width="337"></TextBlock>
                <StackPanel VerticalAlignment="Center">
                    <materialDesign:PopupBox Foreground="Black" HorizontalAlignment="Right"  Margin="9" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False">
                        <Border BorderBrush="#690fc2" BorderThickness="1">
                            <StackPanel Width="150" Background="#f3f5f2">
                                <Button Content="About" VerticalContentAlignment="Center" FontSize="18" Click="aboutBTN_Click"/>
                                <Separator/>
                                <Button Content="Exit" VerticalContentAlignment="Center" FontSize="18" Click="closeBTN_Click"/>
                            </StackPanel>
                        </Border>
                    </materialDesign:PopupBox>
                </StackPanel>
                <Label Name="miniMizeLBL" Content="_" PreviewMouseDown="miniMizeLBL_PreviewMouseDown" FontSize="25" Foreground="Black" HorizontalAlignment="Left" Margin="1007,-3,0,0" VerticalAlignment="Top"/>
                <materialDesign:PackIcon Kind="Key" Margin="503,9,0,0" Width="31" Height="33" Foreground="Black" RenderTransformOrigin="1.547,0.52"/>
            </Grid>
            <Grid x:Name="GridMenu" HorizontalAlignment="Left"  Width="221">
                <Grid.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Resources/Menu.jpg"/>
                </Grid.Background>
                <ListViewItem  Name="homeListVI" ToolTip="Home" Height="39" Foreground="#FFDCDCDC" FontSize="18" PreviewMouseDown="Home_PreviewMouseDown" Margin="0,88,0,576">
                    <StackPanel Orientation="Horizontal" >
                        <materialDesign:PackIcon Name="homeIcon" Kind="Home" Margin="9" Width="18" Height="18" VerticalAlignment="Center"/>
                        <TextBlock Name="homeTXT" Text="Home" VerticalAlignment="Center"/>
                    </StackPanel>
                </ListViewItem>
                <ListViewItem  Name="appListVI" ToolTip="Applications" Height="39" Foreground="Red" FontSize="18" PreviewMouseDown="App_PreviewMouseDown" Margin="0,166,0,498" IsEnabled="False">
                    <StackPanel Orientation="Horizontal" >
                        <materialDesign:PackIcon Name="appIcon" Kind="ApplicationBraces" Margin="9" Width="18" Height="18" VerticalAlignment="Center"/>
                        <TextBlock x:Name="appTXT" Text="Applications" VerticalAlignment="Center"/>
                    </StackPanel>
                </ListViewItem>
                <ListViewItem Name="vaultsListVI" ToolTip="Vaults" Height="39" Foreground="#FFDCDCDC" FontSize="18" PreviewMouseDown="Vault_PreviewMouseDown" Margin="0,127,0,537">
                    <StackPanel Orientation="Horizontal" >
                        <materialDesign:PackIcon Name="vaultIcon" Kind="Lock" Margin="9" Width="18" Height="18" VerticalAlignment="Center"/>
                        <TextBlock Name="vaultTXT" Text="Vaults" VerticalAlignment="Center"/>
                    </StackPanel>
                </ListViewItem>
                <Label Name="versionLabel" Content="v1.0" HorizontalAlignment="Left" Foreground="#FFDCDCDC" FontSize="12" Margin="188,679,0,-2"  VerticalAlignment="Top"/>
            </Grid>
        </Grid>
    </Border>
</Window>
